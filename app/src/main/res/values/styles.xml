<resources>
    <attr name="cardStyle" format="reference" />
    <attr name="accentColor" format="reference" />
    <attr name="iconColor" format="reference" />
    <attr name="windowBackground" format="reference" />
    <attr name="progressBackgroundColor" format="reference" />
    <attr name="progressDrawable" format="reference" />
    <attr name="progressDrawableWithBackground" format="reference" />
    <attr name="stateSelector" format="reference" />
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorPrimary</item><!--正常状态下的颜色-->
        <item name="windowBackground">@color/window_background</item>
        <item name="android:windowBackground">@color/window_background</item>
        <!--<item name="stateSelector">@color/state_selector_light</item>-->
        <item name="progressBackgroundColor">@color/progressBackgroundColorLight</item>
        <item name="android:progressDrawable">@drawable/progress_drawable</item>
        <item name="progressDrawableWithBackground">@drawable/progress_drawable_withbackground
        </item>
    </style>

    <style name="AppTheme.ButtonTheme">
        <item name="colorButtonNormal">@color/colorPrimary</item><!--正常状态下的颜色  -->
        <item name="colorControlHighlight">@color/colorPrimaryDark</item><!--覆盖色，按下的颜色  -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Full" parent="AppTheme.NoActionBar">
        <!--窗口全屏-->
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
